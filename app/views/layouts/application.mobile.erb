<!doctype html>
  <head>
    <title>Timely</title>
    <meta name="author" content="Chase Southard" />
    <meta name="copyright" content="2011" />
    <meta name="description" content="find when you should punch out via Timely" />
    <meta name="keywords" content="timeclock, punchclock, rails, webapp" />
    <meta NAME="ROBOTS" CONTENT="INDEX,NOFOLLOW" />
    <meta name="viewport" content="width=device-width" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="width=device-width" />
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "mobile" %>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag 'mobile' %>
    <%= yield(:head) %>
  </head>
  <body>
      <div id="wrapper" data-role="page">
        <div id="main">
          <% unless flash.empty? %>
            <div class="info">
            <%- flash.each do |name, msg| -%>
              <%= content_tag :div, msg, :id => "flash_#{name}" %>
            <%- end -%>
            </div>
          <% end %>
          <%= yield %>
          <div id="push">
            <!-- push for sticky footer -->
          </div>
        </div>
      </div>
      <div id="footer">
        <p>Another marginally useful project by Chase Southard<br />March 20, 2011</p> 
      </div>
  </body>
</html>
